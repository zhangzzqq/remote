<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mdsd.telemedicine">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".module.launcher.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name=".module.login.LoginActivity"
            android:label="@string/title_activity_login"/>
        <activity
            android:name=".module.settings.UrlSettingsActivity"
            android:label="@string/title_activity_settings_url"/>
        <activity
            android:name=".module.main.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustPan"/>

        <service android:name=".service.AudioService"/>

        <receiver
            android:name=".receiver.ScanReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.android.server.scannerservice.broadcast"/>
                <action android:name="SYSTEM_BAR_READ"/>
                <action android:name="lachesis_barcode_value_notice_broadcast"/>
            </intent-filter>
        </receiver>

        <activity
            android:name=".module.patient.PatientSelectorActivity"
            android:configChanges="orientation|keyboardHidden">
        </activity>
     
    </application>

</manifest>